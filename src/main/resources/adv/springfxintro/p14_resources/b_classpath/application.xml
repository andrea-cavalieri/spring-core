<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="adv.springfxintro.p14_resources.MyResourceReader">
        <property name="resource" value="classpath:adv/springfxintro/p14_resources/b_classpath/input.txt"/>
    </bean>

    <!--

    Il prefisso "classpath:" indica di utilizzare una ClassPathResource.
    Il percorso sempre relativo alla root del classpath (src/main/resources o src/test/resources).

    -->

</beans>