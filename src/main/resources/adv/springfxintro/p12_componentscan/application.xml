<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="adv.springfxintro.p12_componentscan"/>

    <!--

    NOTE:
    1. Lo scan creerà un bean per ciascuna classe annotata presente in
       adv.springfxintro.p12_componentscan.some.inner.location.
    2. <context:component-scan> attiva implicitamente anche <context:annotation-config/>.
       Ecco perché funziona @Autowired in MyService.

    -->

</beans>